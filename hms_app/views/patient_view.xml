<odoo>

    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">patient.tree.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="f_name"/>
                <field name="l_name"/>
                <field name="birth_date"/>
                <field name="age" class="text-left"/>
                <field name="state" widget="badge"
                       decoration-danger="state == 'serious'"
                       decoration-warning="state == 'fair'"
                       decoration-success="state == 'good'"/>
                <field name="blood_type"/>
                <field name="department_id"/>
                <field name="doctor_id" groups="hms_app.hms_manager_group"/>
            </tree>
        </field>
    </record>

    <record id="patient_form_view" model="ir.ui.view">
        <field name="name">patient.form.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_add_log" type="object"
                            string="Add Log" class="btn btn-primary"/>
                    <button name="action_serious" type="object" string="Serious"
                            class="btn-danger" invisible="state not in ('undetermined', 'fair')"/>
                    <button name="action_fair" type="object" string="Fair"
                            class="btn-warning" invisible="state not in ('good','serious','undetermined')"/>
                    <button name="action_good" type="object" string="Good"
                            class="btn-success" invisible="state not in ('undetermined' , 'fair')"/>
                    <field name="state" widget="statusbar" statusbar_visible="undetermined,serious,fair,good"/>
                </header>
                <sheet>
                    <group>
                        <group string="General Info.">
                            <field name="f_name"/>
                            <field name="l_name"/>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                            <field name="address"/>
                            <field name="state"/>
                            <field name="email"/>
                        </group>
                        <group string="Additional Info.">
                            <field name="history"/>
                            <field name="pcr"/>
                            <field name="cr_ratio"/>
                            <field name="blood_type"/>
                            <field name="department_id"/>
                            <field name="doctor_id" groups="hms_app.hms_manager_group"/>
                            <field name="image" widget="image" options='{"size": [100, 100]}' class="bg-view"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Log History">
                            <field name="line_ids">
                                <tree>
                                    <field name="created_by"/>
                                    <field name="date"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_search_view" model="ir.ui.view">
        <field name="name">patient.search.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="f_name"/>
                <field name="l_name"/>
            </search>
        </field>
    </record>

    # view all patients
    <record id="hms_patient_action" model="ir.actions.act_window">
        <field name="name">All Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--    <menuitem id="menu_item_hms_patients"-->
    <!--              name="View Patients"-->
    <!--              parent="menu_root_patient"-->
    <!--              action="hms_patient_action"/>-->

</odoo>
